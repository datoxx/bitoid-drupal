{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
<div class="hidden md:flex  items-center">
    <input class="checked:bg-blue-500 mr-4 default:bg-blue-dark w-6 h-6"  type="checkbox" id="check" />{{ children }}
    <label class="md:hidden lx:block font-bold mr-7" for="check">Full Time Only</label>
    <label class="lx:hidden font-bold mr-7 " for="check">Full Time </label>
</div>
